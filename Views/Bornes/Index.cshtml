@using ProjetMVC.Enums;
@model List<ProjetMVC.ViewModels.BorneViewModel>

@{
    ViewData["Title"] = "Liste des bornes";
}

<div class="container">
    <div class="card-favorites-borne position-relative">
        <h1 class="card-title-favorites-borne">@ViewData["Title"]</h1>

        <div class="table-responsive">
            <table class="table table-borne">
                <thead>
                    <tr>
                        <th>Borne ID</th>
                        <th>Type de connecteur</th>
                        <th>Puissance (kW)</th>
                        <th>Adresse</th>
                        <th>Moyenne des évaluations</th>
                        <th>Favoris</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var borne in Model)
                    {
                        <tr>
                            <td>@borne.BorneId</td>
                            <td>@borne.TypeConnecteur</td>
                            <td>@borne.PuissanceKW kW</td>
                            <td class ="adresse">@borne.Adresse.NoCivique, @borne.Adresse.Rue, @borne.Adresse.Ville, @ProvinceHelper.GetProvinceName(borne.Adresse.Province), @borne.Adresse.CodePostal</td>
                            @if (@borne.NoteMoyenne.HasValue)
                            {
                                <td>@borne.NoteMoyenne.Value.ToString("F1")</td>
                            }
                            else
                            {
                                <td>N/A</td>
                            }
                            <td>
                                @if (borne.EstFavori)
                                {
                                    <i class="fa-star fas favorite" data-id="@borne.BorneId"></i>
                                }
                                else
                                {
                                    <i class="far fa-star favorite"></i>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@borne.BorneId" class="btn btn-details">
                                    <i class="fas fa-info-circle"></i> Détails
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="pagination" class="pagination-container mt-3"></div>
    </div>
    <div class="d-flex justify-content-center">
        <a href="@(Url.Action("Index", "Home"))" class="btn btn-custom-Acceuil mt-3">
            <i class="fas fa-arrow-left"></i> Retour à l'accueil
        </a>
        <a href="@(Url.Action("Favorites", "Bornes"))" class="btn btn-custom-Fav mt-3 ml-2">
            <i class="fas fa-star"></i> Liste de mes favoris
        </a>
    </div>
</div>
<div id="info-message" data-message="@TempData["AddBorneSuccessMessage"]" style="display:none;"></div>
