@model ProjetMVC.ViewModels.ModifierDisponibiliteViewModel

<div class="container">
    <div class="card-favorites-borne position-relative">
        <h2 class="card-title-favorites-borne">Modifier la disponibilité</h2>

        <form asp-action="ModifierDisponibilite" method="post">
            <input type="hidden" name="DisponibiliteId" value="@Model.DisponibiliteId" />
            <input type="hidden" name="BorneId" value="@Model.BorneId" />

            <div class="form-group">
                <label for="dateDebut">Date de début</label>
                <input type="datetime-local" id="dateDebut" name="DateDebut" class="form-control" value="@Model.DateDebut.ToString("yyyy-MM-ddTHH:mm")" required />
            </div>
            <div class="d-flex justify-content-center mt-4">
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="fas fa-arrow-left"></i> Retour à la Liste
                </a>
                <button type="submit" class="btn btn-primary me-2"><i class="fas fa-save"></i> Enregistrer les modifications</button>
            </div>
        </form>
    </div>
</div>
