@model ProjetMVC.ViewModels.EvaluationCreateVM

<div class="container">
    <div class="card shadow">
        <div class="card-body">
            <h2 class="card-title text-center">Ajouter une évaluation</h2><hr />
            <form asp-action="AddEvaluation" method="post" class="evaluation-form">
                <input type="hidden" asp-for="BorneId" />

                <div class="form-floating mb-3">
                    <select asp-for="Note" class="form-control" id="Note">
                        <option value="">Sélectionnez une note</option>
                        <option value="1">1 étoile</option>
                        <option value="2">2 étoiles</option>
                        <option value="3">3 étoiles</option>
                        <option value="4">4 étoiles</option>
                        <option value="5">5 étoiles</option>
                    </select>
                    <label for="Note">Note</label>
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="Commentaire" class="form-control" rows="4" placeholder="Écrivez votre commentaire ici..." id="Commentaire"></textarea>
                    <label for="Commentaire">Commentaire</label>
                    <span asp-validation-for="Commentaire" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Soumettre
                    </button>
                    <a class="btn btn-secondary ml-2" asp-action="Details" asp-route-id="@Model.BorneId">
                        <i class="fas fa-times"></i> Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>



