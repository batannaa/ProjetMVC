<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetMVC</title>
    <link rel="shortcut icon" href="~/Images/Logo.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    @RenderSection("Styles", required: false)
</head>
<body class="@(!User.Identity.IsAuthenticated ? "not-authenticated" : "authenticated")">
    @{
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img src="~/images/logo.png" alt="Logo" /> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-link-special" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i>Accueil</a>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark nav-link-special" asp-area="" asp-controller="Bornes" asp-action="Map"><i class="fas fa-map-marker-alt"></i>Nos bornes</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark nav-link-special" asp-area="" asp-controller="Bornes" asp-action="RechercherBorne"><i class="fas fa-search"></i>Rechercher une borne</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark nav-link-special" asp-area="" asp-controller="Bornes" asp-action="Add"><i class="fas fa-plus-circle"></i>Ajouter une borne</a>
                            </li>
                            @if (!(currentController == "Bornes" && currentAction == "Favorites"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark nav-link-special" asp-area="" asp-controller="Bornes" asp-action="Favorites">
                                        <i class="fas fa-star"></i>Mes favoris
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <div id="greeting-container" class="d-flex align-items-center me-3">
                                    <span class="greeting-step me-2 greeting-bonjour">Bonjour,</span>
                                    <span class="greeting-step user-name me-2">@ViewBag.FirstName</span>
                                </div>
                            </li>
                            <li class="nav-item">
                                <form id="logoutForm" method="post" asp-controller="Compte" asp-action="Logout" class="form-inline">
                                    <button type="submit" class="btn btn-link nav-link text-dark btn-connection">
                                        Se déconnecter<i class="fas fa-sign-out-alt"></i>
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            @if (!ViewContext.RouteData.Values["action"].Equals("Register") &&
                           !ViewContext.RouteData.Values["action"].Equals("Login"))
                           {
                            <li class="nav-item">
                                <a class="nav-link text-dark btn-connection" asp-area="" asp-controller="Compte" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i>Se connecter
                                </a>
                            </li>
                           }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Partage des bornes de recharge. Tous droits réservés. - 
            <a class="lien-privacy" asp-area="" asp-controller="Home" asp-action="Privacy">Politique de confidentialité</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/borneMap.js"></script>
    @await RenderSectionAsync("Scripts", required: false) 
</body>
</html>
